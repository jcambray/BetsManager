<UserControl x:Class="BetManager.Core.MenuItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BetManager.Core"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="100">
    <Button>
        <Button.Template>
            <ControlTemplate TargetType="Button">
                <Border CornerRadius="8"  Background="{TemplateBinding Background}">
                    <Label Content="{TemplateBinding Content}" Margin="10" HorizontalAlignment="Center" VerticalAlignment="Center" />
                </Border>
            </ControlTemplate>
        </Button.Template>
    </Button>
    <!--<Button 
                HorizontalAlignment="Stretch" 
                VerticalAlignment="Stretch" 
                HorizontalContentAlignment="Center"
                Height="80"
                Width="80"
                SnapsToDevicePixels="True">
        <Border CornerRadius="4" Background="{Binding FontColor}" />
    </Button>-->
</UserControl>
